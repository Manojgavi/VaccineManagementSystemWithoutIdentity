@model VaccineManagementSystem.ViewModel.Hospital

@{
    ViewBag.Title = "Hospital Registration";
    <link href="~/Styles/FormsSheet.css" rel="stylesheet" />
}



<body class="body-content" style="background-image: url('../../Images/hospi.jpg');
        background-position-x: -175px;
">
