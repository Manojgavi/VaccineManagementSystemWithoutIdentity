@model IEnumerable<VaccineManagementSystem.ViewModel.CustomerOrdersViewModel>

@{
    ViewBag.Title = "CustomerOrders";
}

<h2>CustomerOrders</h2>

<p>
    @Html.ActionLink("Update Status", "UpdateStatus")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VaccineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.count)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VaccineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td>
            @Html.ActionLink("Order", "Orders", new { id=item.Id }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
