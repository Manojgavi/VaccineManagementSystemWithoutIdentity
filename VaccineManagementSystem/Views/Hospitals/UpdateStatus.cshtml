@model IEnumerable<VaccineManagementSystem.ViewModel.CustomersDataViewModel>

@{
    ViewBag.Title = "UpdateStatus";
}
<body style="background-color:lightcyan;">
    <h2>UpdateStatus</h2>

    <p>
        @Html.ActionLink("Go Back", "CustomerOrders")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AadharNumber)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.VaccineTypeId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.VaccineName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AadharNumber)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.VaccineTypeId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.VaccineName)
                </td>
                <td>
                    @Html.ActionLink("Vaccinated", "Vaccinated", new { id = item.Id }) |
                    @Html.ActionLink("Not Shown Up", "NotShownUp", new { id = item.Id }) |
                </td>
            </tr>
        }

    </table>
</body>